<Window x:Class="Schifffahrt.Evaluation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Evaluation" Height="500" Width="800" Background="#FFC0D1D0" ResizeMode="NoResize" BorderThickness="1" BorderBrush="Black">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="317*"/>
            <RowDefinition Height="52*"/>
        </Grid.RowDefinitions>
        <Button Name="btnGoBack" Content="Zurück zum Hauptprogramm" HorizontalAlignment="Left" Margin="260,10,0,0" VerticalAlignment="Top" Grid.Row="1" BorderThickness="2" BorderBrush="#FF6060F7" Background="#FF76A2D6" Foreground="White" FontFamily="Segoe UI Semibold"/>
        <TextBlock Name="tbResultMsg"  HorizontalAlignment="Left" Margin="53,233,0,0" TextWrapping="WrapWithOverflow" VerticalAlignment="Top" Width="217" RenderTransformOrigin="1.348,-0.031" FontSize="18" Foreground="#FF1C00CD">
               "Herzlichen Glückwunsch,
               Sie haben bestanden"</TextBlock>
        <TextBlock Name="tbResultEvaluation" HorizontalAlignment="Left" Margin="53,165,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="397" Foreground="#FF1C00CD" FontSize="18" Height="29">
            "Sie haben 26 von 30 Fragen
            richtig beantwortet."
        </TextBlock>
        <ListBox Name="lbWrongAnswers" HorizontalAlignment="Left" Margin="53,10,0,0" VerticalAlignment="Top" BorderThickness="0" BorderBrush="#FF1C00CD">
            <Label Name="lblConstantWrongQuestions" Content="Falsch beantwortete Fragen" Background="#FF1C00CD" Foreground="White" BorderThickness="0,0,80,0"/>
            <Separator Margin="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
            <Label Name="lblWrongQuestion" Content="1. Frage : Welche Seite wird als Luvseite bezeichnet?" SizeChanged="lblWrongQuestion_SizeChanged"/>
            <Label Name="lblWrongAnswer" Content="FALSCH: Die Seite in Fahrtrichtung rechts."/>
            <Label Name="lblRightAnswer" Content="RICHTIG: Die Seite in Fahrtrichtung links."/>
        </ListBox>
    </Grid>
</Window>
