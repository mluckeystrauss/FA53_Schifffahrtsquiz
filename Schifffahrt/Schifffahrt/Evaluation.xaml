<Window x:Class="Schifffahrt.Evaluation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Style="{StaticResource {x:Type Window}}"
        Title="Evaluation" ScrollViewer.VerticalScrollBarVisibility="Disabled"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="80px"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Label Grid.Column="0" Grid.ColumnSpan="4" Grid.Row="0" Style="{StaticResource WindowHeader}" Content="Auswertung"/>
        <ListBox Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1" Name="lbWrongAnswers" HorizontalContentAlignment="Stretch">
            <Label Name="lblConstantWrongQuestions" Background="#FF76A2D6" Foreground="White" HorizontalAlignment="Stretch" Content="Falsch beantwortete Fragen"/>
            <TextBlock Name="tbWrongQuestion" Style="{StaticResource EvaluationListBox}" Text="1. Frage : Welche Seite wird als Luvseite bezeichnet?"/>
            <TextBlock Name="tbWrongAnswer" Style="{StaticResource EvaluationListBox}" Text="FALSCH: Die Seite in Fahrtrichtung rechts."/>
            <TextBlock x:Name="tbRightAnswer" Style="{StaticResource EvaluationListBox}" Text="RICHTIG: Die Seite in Fahrtrichtung links."/>
        </ListBox>
        <TextBlock Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="2" Style="{StaticResource Evaluation}" Name="tbResultEvaluation">
            Sie haben 26 von 30 Fragen richtig beantwortet.
        </TextBlock>
        <TextBlock Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="3" Style="{StaticResource Evaluation}" Name="tbResultMsg">
               Herzlichen Glückwunsch,
               Sie haben bestanden.
        </TextBlock>
        <Button Grid.Column="1" Grid.Row="4"  Name="btnGoBack" HorizontalAlignment="Right" VerticalAlignment="Bottom"  Content="Zurück zum Hauptprogramm"/>
        <Image Grid.Column="2" Grid.Row ="4" Source="Resources/Logos/Segelschule_OSZ_IMT.png"/>
    </Grid>
</Window>
